{
  "name": "twin-ops",
  "version": "1.0.0",
  "description": "数据中心数字孪生智能运维平台 - 国家电网设备监控与预测",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint --fix --ext .js,.vue,jsx,ts,tsx src",
    "format": "prettier --write src/",
    "lint:style": "stylelint **/*.{html,vue,css,sass,scss} --fix",
    "prettier:format": "prettier --config .prettierrc.cjs  --ext .js,.vue,jsx,ts,tsx src --write"
  },
  "dependencies": {
    "@tweenjs/tween.js": "19.0.0",
    "animate.css": "^4.1.1",
    "autofit.js": "^3.0.7",
    "axios": "^1.13.3",
    "cheerio": "^1.2.0",
    "echarts": "^5.4.3",
    "gsap": "^3.12.5",
    "lodash": "^4.17.21",
    "mitt": "^3.0.1",
    "three": "^0.170.0",
    "vue": "^3.3.11"
  },
  "devDependencies": {
    "@tsconfig/node18": "^18.2.6",
    "@types/lodash": "^4.14.202",
    "@types/node": "^18.19.3",
    "@types/three": "^0.170.0",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@vitejs/plugin-vue": "^4.5.2",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vue/tsconfig": "^0.5.1",
    "eslint": "^8.39.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.11.0",
    "npm-run-all2": "^6.1.1",
    "postcss": "^8.4.23",
    "postcss-html": "^1.5.0",
    "prettier": "^2.8.8",
    "puppeteer": "^24.36.0",
    "rollup-plugin-visualizer": "^5.12.0",
    "sass-embedded": "^1.97.3",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-recommended-scss": "^8.0.0",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-config-standard-scss": "^6.1.0",
    "typescript": "~5.3.0",
    "vite": "^5.4.0",
    "vite-plugin-eslint": "^1.8.1",
    "vue-tsc": "^1.8.25"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": [
      "yarn lint",
      "yarn prettier:format"
    ],
    "*.{html,css,sass,scss,vue}": [
      "yarn lint:style"
    ]
  },
  "resolutions": {
    "bin-wrapper": "npm:bin-wrapper-china"
  }
}
